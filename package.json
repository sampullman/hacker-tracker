{
  "name": "hacker-tracker",
  "version": "1.0.0",
  "description": "Self-hosted app for alerts based on Hacker News posts and comments",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run db:setup && concurrently \"pnpm run frontend\" \"pnpm run backend\"",
    "frontend": "pnpm --filter frontend dev",
    "backend": "pnpm --filter backend dev",
    "jobs": "pnpm --filter jobs dev",
    "jobs:start": "pnpm --filter jobs start",
    "build": "pnpm --filter shared-types build && pnpm -r build",
    "test": "pnpm -r test",
    "test:integration": "pnpm --filter integration-test test",
    "test:e2e": "pnpm --filter e2e-test test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm --filter shared-types typecheck && pnpm -r typecheck",
    "db:up": "docker compose -f docker-compose.dev.yml up -d postgres",
    "db:down": "docker compose -f docker-compose.dev.yml down",
    "db:setup": "pnpm run db:start && pnpm run db:init && pnpm --filter migrations db:setup",
    "db:reset": "pnpm run db:start && pnpm run db:init && pnpm --filter migrations db:reset",
    "db:migrate": "pnpm --filter migrations migration:run",
    "db:migrate:revert": "pnpm --filter migrations migration:revert",
    "db:start": "docker compose -f docker-compose.dev.yml up -d postgres && ./scripts/wait-for-db.sh",
    "db:init": "PGPASSWORD=postgres psql -h 127.0.0.1 -p 5440 -U postgres -f scripts/init-db.sql",
    "migration:generate": "pnpm --filter migrations migration:generate",
    "migration:create": "pnpm --filter migrations migration:create",
    "setup": "pnpm install && pnpm run build && pnpm run db:setup"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "tsx": "^4.20.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
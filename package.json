{
  "name": "hacker-tracker",
  "version": "1.0.0",
  "description": "Self-hosted app for alerts based on Hacker News posts and comments",
  "private": true,
  "type": "module",
  "scripts": {
    "frontend": "pnpm --filter frontend dev",
    "backend": "pnpm --filter backend dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:integration": "pnpm --filter integration-tests test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}